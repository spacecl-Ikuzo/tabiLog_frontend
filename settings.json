{
  // 저장 시 자동 포맷 적용
  "editor.formatOnSave": true,

  // Prettier를 기본 포맷터로 지정
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ESLint 자동 수정 적용
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },

  // ESLint가 검사할 파일 확장자
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "html",
    "css"
  ],

  // HTML 저장 시 Prettier 적용
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // CSS 저장 시 Prettier 적용
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // TSX 저장 시 Prettier 적용
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}